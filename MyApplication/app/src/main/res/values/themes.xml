<!-- res/values/styles.xml -->
<resources>

    <!-- Theme cho Light Mode -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Màu nền -->
        <item name="android:background">@color/background</item>

        <!-- Màu chữ chính -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- Màu cho Button -->
        <item name="colorAccent">@color/primary_color</item>

        <!-- Màu cho Divider -->
        <item name="android:divider">@color/divider_color</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/ModalStyle.Transparent</item>
    </style>

    <style name="ModalStyle.Transparent" parent="Theme.MaterialComponents.Dialog">
    </style>

    <style name="SaveBottomSheetDialogStyle" parent="Theme.MaterialComponents.BottomSheetDialog">
    </style>

</resources>