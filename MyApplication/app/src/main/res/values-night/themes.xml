<!-- res/values-night/styles.xml -->
<resources>
    <!-- Theme cho Dark Mode -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:selectableItemBackground">@android:color/transparent</item>
        <item name="selectableItemBackground">@android:color/transparent</item>

        <!-- Màu chữ chính -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- Màu cho Button -->
        <item name="colorAccent">@color/primary_color</item>

        <!-- Ẩn nền bottomBar -->
        <item name="android:colorControlHighlight">@android:color/transparent</item>

        <!-- Màu cho Divider -->
        <item name="android:divider">@color/divider_color</item>

    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.BottomSheet</item>
    </style>

    <style name="ShapeAppearanceOverlay.BottomSheet" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
</resources>